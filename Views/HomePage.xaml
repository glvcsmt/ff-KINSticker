<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RJVTD2_MP_2025261.ViewModels"
             x:DataType="local:HomePageViewModel"
             x:Class="RJVTD2_MP_2025261.Views.HomePage">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="30"
                             WidthRequest="250"
                             Margin="0, 200, 0, 0">
            <Button Text="Kép készítése" Command="{Binding CapturePhotoCommand}" />
            <Button Text="Saját profil" />
            <Button Text="Galéria" />
            <Button Text="Térkép" />
            <Button Text="Statisztika"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>