<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RJVTD2_MP_2025261.ViewModels"
             x:DataType="local:PhotoPreviewPopupViewModel"
             x:Class="RJVTD2_MP_2025261.Views.PhotoPreviewPopup">
    <ContentPage.Content>
        <VerticalStackLayout>
            <Image Source="{Binding CapturedPhotoPath}"
                   HeightRequest="500"
                   WidthRequest="380" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>